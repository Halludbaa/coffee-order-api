{
  "openapi": "3.0.3",
  "info": {
    "title": "Coffee Order API",
    "description": "A secure, multi-store cafe order system with IDR support and UUID",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "full_name": { "type": "string" },
          "role": { "type": "string", "enum": ["barista", "manager", "admin"] },
          "store_id": { "type": "string", "format": "uuid" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "Store": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "address": { "type": "string" },
          "store_slug": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "MenuItem": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "price": { "type": "integer" },
          "category": { "type": "string" }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "order_number": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["pending", "preparing", "ready", "completed", "cancelled"]
          },
          "total": { "type": "integer" },
          "customer_name": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "Paging": {
        "type": "object",
        "properties": {
          "page": { "type": "integer" },
          "size": { "type": "integer" },
          "total_item": { "type": "integer" },
          "total_page": { "type": "integer" }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [{ "BearerAuth": [] }],
  "paths": {
    "/api/stores": {
      "get": {
        "tags": ["Store API"],
        "summary": "Get all stores",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": { "type": "integer", "default": 1 }
          },
          {
            "name": "size",
            "in": "query",
            "schema": { "type": "integer", "default": 10 }
          }
        ],
        "responses": {
          "200": {
            "description": "List of stores",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Store" }
                    },
                    "paging": { "$ref": "#/components/schemas/Paging" }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Store API"],
        "summary": "Create new store",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "address": { "type": "string" },
                  "store_slug": { "type": "string" }
                },
                "required": ["name", "store_slug"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Store created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/Store" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/stores/{storeId}": {
      "get": {
        "tags": ["Store API"],
        "summary": "Get store by ID",
        "parameters": [
          {
            "name": "storeId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "Store found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/Store" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/stores/{storeId}/menu": {
      "get": {
        "tags": ["Menu API"],
        "summary": "Get store-specific menu",
        "parameters": [
          {
            "name": "storeId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "Menu with categories and prices",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/MenuItem" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/_login": {
      "post": {
        "tags": ["Auth API"],
        "summary": "User login with PIN",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "pin": { "type": "string" }
                },
                "required": ["email", "pin"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": { "type": "string" },
                        "user": { "$ref": "#/components/schemas/User" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/orders": {
      "get": {
        "tags": ["Order API"],
        "summary": "Get pending orders for current store",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "schema": { "type": "string", "enum": ["pending", "preparing"] }
          }
        ],
        "responses": {
          "200": {
            "description": "List of orders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Order" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Order API"],
        "summary": "Create new order",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customer_name": { "type": "string" },
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "product_id": { "type": "string", "format": "uuid" },
                        "quantity": { "type": "integer" },
                        "customizations": { "type": "object" },
                        "note": { "type": "string" }
                      }
                    }
                  }
                },
                "required": ["items"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/Order" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/orders/{orderId}/status": {
      "patch": {
        "tags": ["Order API"],
        "summary": "Update order status",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": ["preparing", "ready", "cancelled"]
                  }
                },
                "required": ["status"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Status updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/Order" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
